{
  "name": "draft-clone",
  "version": "1.32.1",
  "description": "App clone",
  "main": "index.js",
  "scripts": {
    "dev": "vite --host",
    "build": "tsc && vite build",
    "preview": "vite preview --host",
    "lint": "npm run lint:styles && npm run lint:scripts",
    "lint:fix": "npm run lint:scripts:fix && npm run lint:styles:fix",
    "lint:scripts": "eslint --ext .ts,.tsx src",
    "lint:scripts:fix": "npm run lint:scripts -- --fix",
    "lint:styles": "stylelint \"src/**/*.css\"",
    "lint:styles:fix": "npm run lint:styles -- --fix",
    "test": "vitest",
    "test:cov": "vitest run --coverage",
    "prepare": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/A-Hanchar/Draft-clone.git"
  },
  "authors": [
    {
      "name": "Artsiom Hanchar",
      "email": "artsiom.hanchar@gmail.com",
      "url": "https://github.com/A-Hanchar"
    },
    {
      "name": "Vitaly Kovalev",
      "email": "kovalevvtl@gmail.com",
      "url": "https://github.com/sohodoll"
    },
    {
      "name": "Yauheni Zabotsin",
      "email": "yauheni.zabotsin@gmail.com",
      "url": "https://github.com/yauhenizabotsin"
    }
  ],
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/A-Hanchar/Draft-clone/issues"
  },
  "homepage": "https://github.com/A-Hanchar/Draft-clone#readme",
  "devDependencies": {
    "@commitlint/cli": "^17.4.2",
    "@commitlint/config-conventional": "^17.4.2",
    "@ngneat/falso": "^6.4.0",
    "@tailwindcss/line-clamp": "^0.4.2",
    "@vitest/coverage-c8": "^0.28.3",
    "eslint": "^8.33.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-airbnb-typescript": "^17.0.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-config-standard-with-typescript": "^33.0.0",
    "eslint-plugin-prettier": "^4.2.1",
    "husky": "^8.0.3",
    "jsdom": "^21.1.0",
    "lint-staged": "^13.1.0",
    "postcss": "^8.4.21",
    "postcss-import": "^15.1.0",
    "postcss-nesting": "^11.1.0",
    "postcss-pxtorem": "^6.0.0",
    "prettier": "^2.8.3",
    "stylelint": "^14.16.1",
    "stylelint-config-prettier": "^9.0.4",
    "stylelint-config-recess-order": "^3.1.0",
    "stylelint-config-standard": "^29.0.0",
    "stylelint-order": "^6.0.1",
    "tailwindcss": "^3.2.4",
    "typescript": "^4.9.4",
    "vitest": "^0.28.3"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "eslint --ext .ts,.tsx src --fix"
    ],
    "*.css": [
      "prettier --write",
      "stylelint \"src/**/*.css\" --fix"
    ],
    "*.{json,cjs,md,html}": [
      "prettier --write"
    ]
  },
  "dependencies": {
    "@testing-library/dom": "^8.20.0",
    "@testing-library/jest-dom": "^5.16.5",
    "autoprefixer": "^10.4.13",
    "firebase": "^9.17.1",
    "i18next": "^22.4.10",
    "tailwind-scrollbar-hide": "^1.1.7",
    "vite": "^4.0.4",
    "vite-plugin-tsc-watch": "^2.0.1"
  }
}
